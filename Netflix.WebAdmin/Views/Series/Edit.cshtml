@model SeriesEditDetailViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Series</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <div class="form-control-file">
            <img src="~/images/Series/@Model.Series.Banner" width="500" height="%100" />
        </div>
    </div>
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Series.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Series.Name" class="control-label"></label>
                <input asp-for="Series.Name" class="form-control" />
                <span asp-validation-for="Series.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Series.Summary" class="control-label"></label>
                <input asp-for="Series.Summary" class="form-control" />
                <span asp-validation-for="Series.Summary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Series.Director" class="control-label"></label>
                <input asp-for="Series.Director" class="form-control" />
                <span asp-validation-for="Series.Director" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Series.Banner" class="control-label"></label>
                <input type="file" asp-for="Series.FormFile" class="form-control" />
                <span asp-validation-for="Series.Banner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            @foreach (var item in Model.CategoryCheched)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="@item.IsCheked" value="@item.Id" name="seriesCategoryId">
                    <label asp-for="CategoryCheched" class="form-check-label" for="defaultCheck1">@item.CategoryName</label>
                </div>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

